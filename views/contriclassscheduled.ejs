      <div class="container info">
        <table class="table table-striped">
            <thead>
              <tr>
                
                <th scope="col">Class Topic</th>
                <th scope="col">Subject</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
            <%if(contridata){%>
                <%contridata.forEach((data)=>{%>
                    <%if(data.status==null){%>
                       
                    <tr>
                    <td><%=data.classTopic%></td>
                     <td><%=data.subject%></td>
                     <td><%=data.date%></td>
                     <td><%=data.time%></td>
<td><form action="/scheduled/submit/<%=data._id%>?username=<%=data.username1%>" method="POST"><select name="status" id="status">
                        <option value="done">done</option>
                        <option value="cancel">cancel</option>
                     </select>
                     <input type="submit" style="border:none;background: chocolate;color:white;padding:5px 5px 5px 5px;border-radius:4px;">
                    </form></td>
                    </tr>
                   
                    <%}%>
                    <%})%>
                <%}%>
            </tbody>
          </table>
      </div>
      <footer>
      <div class="footer" style="background-image: url('/images/darkness.png');">
        <div class="container">
          <div class="row icons">
